@model List<BlogListDto>
@{
    ViewBag.Title = "Index";
    ViewBag.PageName = "Anasayfa";
}


<div class="hero-wrap js-fullheight" style="background-image: url('/Content/images/bg.jpg');" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text js-fullheight align-items-center justify-content-start" data-scrollax-parent="true">
            <div class="col-md-12 ftco-animate">
                <h2 class="subheading">Hoş geldiniz!</h2>
                <h1 class="mb-4 mb-md-0">Codeblog</h1>
                <div class="row">
                    <div class="col-md-7">
                        <div class="text">
                            <p>Yazılım dünyasındaki son gelişmeler hakkında makaleler ve karşılaştığınız teknik sorunlara yönelik çözümler için CodeBlog'u ziyaret etmeyi unutmayın.</p>
                            <div class="mouse">
                                <a href="#" class="mouse-icon">
                                    <div class="mouse-wheel"><span class="ion-ios-arrow-round-down"></span></div>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<section class="ftco-section py-5">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
            <h2 class="text-center text-uppercase pb-5">Son Makaleler</h2>
                @foreach (BlogListDto blog in Model)
                {
                    <div class="case">
                        <div class="row">
                            <div class="col-md-6 col-lg-6 col-xl-8 d-flex">
                                <a href="@Url.Action("SingleBlog","Blog",new {url=blog.Url })" class="img w-100 mb-3 mb-md-0" style="background-image: url(@blog.PosterPath);"></a>
                            </div>
                            <div class="col-md-6 col-lg-6 col-xl-4 d-flex">
                                <div class="text w-100 pl-md-3">
                                    <span class="subheading mb-0 text-dark">@blog.OwnerName</span><br />
                                    <span class="badge badge-dark text-white mb-5">@blog.OwnerJob</span>
                                    <h2><a href="@Url.Action("SingleBlog","Blog",new {url=blog.Url })">@blog.Title</a></h2>
                                    <ul class="media-social list-unstyled">
                                        <li class="ftco-animate"><a href="javascript:void(0)"><span class="icon-twitter"></span></a></li>
                                        <li class="ftco-animate"><a href="javascript:void(0)"><span class="icon-facebook"></span></a></li>
                                        <li class="ftco-animate"><a href="javascript:void(0)"><span class="icon-instagram"></span></a></li>
                                    </ul>
                                    <div class="meta">
                                        <p class="mb-0 text-dark"><i class="icon-calendar text-warning"></i> @blog.Created.ToLongDateString() | <i class="icon-thumbs-up text-warning"></i> @blog.Likes like</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>

