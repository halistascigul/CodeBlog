@model RegisterDto
@{
    ViewBag.Title = "Index";
    ViewBag.PageName = "Kayıt Ol";
}

@section Styles{
    <link href="~/Content/css/login.css" rel="stylesheet" />
}

<div class="container login-container w-50 mx-auto">
    <div class="row">
        <div class="col-md-12 login-form-1">
            <h3>Kayıt Formu</h3>
            @using (Html.BeginForm("Index", "Account", FormMethod.Post))
            {
                <h4>@ViewBag.InsertError</h4>
                @Html.AntiForgeryToken()
                <div class="form-group">
                    @Html.TextBoxFor(x => x.Email, new { @class = "form-control", required = "required", placeholder = "Email *" })
                    @Html.ValidationMessageFor(x => x.Email, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(x => x.FullName, new { @class = "form-control", required = "required", placeholder = "Ad soyad *" })
                    @Html.ValidationMessageFor(x => x.FullName, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(x => x.Password, new { @class = "form-control", required = "required", placeholder = "Şifre *" })
                    @Html.ValidationMessageFor(x => x.Password, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(x => x.PasswordConfirm, new { @class = "form-control", required = "required", placeholder = "Şifre tekrar *" })
                    @Html.ValidationMessageFor(x => x.PasswordConfirm, "", new { @class = "text-danger" })
                </div>
                <div class="form-check">
                    <input type="checkbox" required id="chcOkudum" class="form-check-input" name="name" />
                    <label for="chcOkudum" class="form-check-label"><a href="#">Üyelik sözleşmesini</a> okudum, onaylıyorum.</label>
                </div>
                <div class="form-group">
                    <input type="submit" id="btnRegister" required class="btnSubmit btn-block mt-4" disabled value="Kayıt ol" />
                </div>

                <span class="text-danger">@ViewBag.Eslesmiyor</span>


            }
        </div>
        
    </div>
</div>

@section JavaScript{
    <script>
        $('#chcOkudum').click(function () {
            if ($('#chcOkudum').is(":checked")) {
                $('#btnRegister').removeAttr('disabled');
            }
            else {
                $('#btnRegister').attr('disabled', 'disabled')
            }
        })
    </script>
}