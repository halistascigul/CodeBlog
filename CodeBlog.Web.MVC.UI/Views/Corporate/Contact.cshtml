@model ContactViewModel
@{
    ViewBag.PageName = "İletişim";
}

    <div class="col-md-8 offset-md-2 mt-3 mb-5">
        <div class="row">
            <div class="col-md-4 offset-md-2">Telefon: <a href="tel:+905334755770" clas>0533 475 5770</a></div>
            <div class="col-md-5">Mail: <a href="mailto:info@codeblog.com">info@codeblog.com</a></div>
        </div>
        <hr />
        <form action="/iletisim-formu" method="post" class="bg-light p-4 p-md-5 contact-form">
            <div class="form-group">
                <input type="text" name="Name" class="form-control" placeholder="Adınız *">
            </div>
            <div class="form-group">
                <input type="text" name="Email" class="form-control" placeholder="Mail adresiniz *">
            </div>
            <div class="form-group">
                <input type="text" name="Subject" class="form-control" placeholder="Konu *">
            </div>
            <div class="form-group">
                <textarea name="Message" cols="30" rows="7" class="form-control" placeholder="Mesajınız *"></textarea>
            </div>
            <div class="form-group">
                <input type="submit" value="Gönder" class="btn btn-primary py-3 px-5">
            </div>
        </form>
    </div>

